<h2>restaurant index</h2>

<ul>
  <li><%= link_to 'Add Restaurant Type', restaurant_types_path %></li>
  <li><%= link_to 'Add Specialty', specialties_path %></li>
  <li><%= link_to 'Add Cuisine Type', specialty_areas_path %></li>
  <li><%= link_to 'Add City Region', city_regions_path %></li>
</ul>

<table>
  <tr>
    <th>Nama</th>
    <th>Specialty</th>
    <th>Cuisine Type</th>
    <th>Alamat</th>
    <th>Area</th>
    <th>Kota</th>
    <th>Telepon</th>
    <th>Jam Buka</th>
    <th>Jam Weekend</th>
    <th>Website</th>
    <th>Keterangan</th>
    <th>Action</th>
  </tr>
 
 <% for restaurant in @restaurants %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.specialty_id %></td>
      <td><%= restaurant.specialty_area_id %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.area %></td>
      <td><%= restaurant.city_region_id %></td>
      <td><%= restaurant.phone %></td>
      <td><%= restaurant.operating_hour %></td>
      <td><%= restaurant.operating_weekend %></td>
      <td><%= restaurant.website %></td>
      <td><%= restaurant.off_day.blank? ? '-' : restaurant.off_day %></td>
      <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %> | <%= link_to 'Delete', restaurant, :method => 'delete' %></td>
    </tr>
  <% end %>
  
</table>